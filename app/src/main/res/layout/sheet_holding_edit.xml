<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabMode"
        style="@style/Widget.FundMobile.TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabIndicator="@drawable/bg_tab_indicator">

        <com.google.android.material.tabs.TabItem
            android:text="@string/by_amount" />

        <com.google.android.material.tabs.TabItem
            android:text="@string/by_share" />
    </com.google.android.material.tabs.TabLayout>

    <LinearLayout
        android:id="@+id/layoutAmountMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etHoldingAmount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_input"
            android:hint="@string/holding_amount"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <EditText
            android:id="@+id/etHoldingProfit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input"
            android:hint="@string/holding_profit"
            android:inputType="numberDecimal|numberSigned"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutShareMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:visibility="gone">

        <EditText
            android:id="@+id/etShareCount"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/bg_input"
            android:hint="@string/share_count"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />

        <EditText
            android:id="@+id/etCostPrice"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_input"
            android:hint="@string/cost_price"
            android:inputType="numberDecimal"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCurrentNav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textColor="@color/text_secondary"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:background="@drawable/bg_button_secondary"
            android:text="@string/cancel"
            android:textColor="@color/text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            style="@style/Widget.FundMobile.Button"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:text="@string/save" />
    </LinearLayout>

</LinearLayout>

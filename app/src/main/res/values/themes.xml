<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.FundMobile" parent="Theme.Material3.Dark.NoActionBar">
        <item name="android:statusBarColor">@color/bg</item>
        <item name="android:navigationBarColor">@color/bg</item>
        <item name="android:windowBackground">@color/bg</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorOnPrimary">@color/bg</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:colorBackground">@color/bg</item>
        <item name="colorSurface">@color/card</item>
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorSurfaceVariant">@color/card_surface</item>
    </style>

    <style name="Widget.FundMobile.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/primary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabBackground">@color/transparent</item>
        <item name="tabRippleColor">@color/primary_10</item>
    </style>

    <style name="Widget.FundMobile.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/bg</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="Widget.FundMobile.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/input_bg</item>
        <item name="boxStrokeColor">@color/border</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="hintTextColor">@color/text_secondary</item>
    </style>

    <style name="Widget.FundMobile.BottomSheet" parent="Widget.Material3.BottomSheet">
        <item name="backgroundTint">@color/card</item>
        <item name="shapeAppearance">@style/ShapeAppearance.FundMobile.BottomSheet</item>
    </style>

    <style name="ShapeAppearance.FundMobile.BottomSheet" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>

    <style name="ThemeOverlay.FundMobile.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.FundMobile.BottomSheet</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>
